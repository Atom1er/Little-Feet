<div class="container">
    <div class="row">
        <div class="col-2 text-center ">
            <h2> ID</h2>
            <hr>
            <div class="row">
                <div class="col-12 text-center ">
                    <br>
                    <ol class="" style="list-style-type:none">
                        {{#each data}}
                        <li>
                            <h2>{{this.id}}</h2>
                            <br>
                        </li>
                        {{/each}}
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-5 text-center div-children-names">
            <h2>Children Name</h2>
            <hr>
            <div class="row">
                <div class="col-12 text-justify ">
                    <br>
                    <ul>
                        {{#each data}}
                        <p>
                            <h4 class="child-activity" value="{{child_name}}">{{child_name}} {{child_last_name}}</h4>
                            <a href="/api/admin-activity-site/{{child_name}}"><button class="child-activity-info">Daily
                                    Acitivities</button></a>
                            <a href="/api/admin-message-site/{{child_name}}"><button class="child-activity-info">Messages</button></a>
                        </p>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-5 text-center div-parent-name">
            <h2>Parent Name</h2>
            <hr>
            <div class="row">
                <div class="col-12 text-center ">
                    <br>
                    <ol class="" style="list-style-type:none">
                        {{#each data}}
                        <li>
                            <h4>{{parent_name}}</h4>
                            <br>
                        </li>
                        {{/each}}
                    </ol>
                </div>
            </div>
        </div>
    </div>
